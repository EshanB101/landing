---
import Landing from '@/components/Landing.astro';
import Layout from '../layouts/Layout.astro';

import '../styles/global.css';
import About from '@/components/About.astro';
import Contact from '@/components/Contact.astro';
---

<Layout>
	<Landing />
	<About />
	<Contact />
</Layout>

<script>
  import { animate, stagger, inView } from "motion";
  
  inView('#about', () => {
    const el = document.querySelectorAll('.scrolling-section');
    animate(el, 
      { y: [150, 0], opacity: 1 },
      { ease: 'easeInOut', duration: 0.4, delay: stagger(0.2), }
    );
  });

  inView('#contact scrolling-section', (el) => {
    animate(el, 
      { y: [150, 0], opacity: 1 },
      { ease: 'easeInOut', duration: 0.4, delay: stagger(0.2), }
    );
  });
  
</script> 