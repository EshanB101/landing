---
import { Image } from 'astro:assets';
import { Button } from "@/components/ui/button"

import type { Link } from '../models/types';

type Props = {
  imageUrl: string;
  links: Link[];
};

const {imageUrl, links} = Astro.props;

---

<header class="bg-white shadow sticky top-0 backdrop-blur-sm">
  <nav class="container m-[0_auto] flex justify-between items-center p-4 bg-white text-black">
    <Image loading="eager" src={imageUrl} alt="Company Logo" width={100} height={50} />
    <ul class="flex items-center space-x-6 text-lg">
      {
        links.map((link: Link, index) => (
          <>
             <li><a class="hover:text-xl transition-all" href={link.url}>{link.label}</a></li>
             { 
              index === links.length - 1 && 
                <Button className="bg-black text-white cursor-pointer" variant="outline">Button</Button>
              }
          </>
        ))
      }
    </ul>
  </nav>
</header>
