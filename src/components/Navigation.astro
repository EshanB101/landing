---
import { Image } from 'astro:assets';
import { Button } from "@/components/ui/button"

import type { Link } from '../models/types';
import ThemeToggle from './ThemeToggle.astro';

type Props = {
  imageUrl: any;
  links: Link[];
};

const {imageUrl, links} = Astro.props;

---

<header id="header" class="bg-white shadow fixed w-full top-0 backdrop-blur-sm">
  <nav class="container m-[0_auto] flex justify-between items-center p-4 bg-white text-black">
    <Image id="logo" loading="eager" src={imageUrl} alt="Company Logo" width={100} height={50} class="cursor-pointer" />
    <ul class="flex items-center space-x-6 text-lg">
      {
        links.map((link: Link, index) => (
          <>
            <li><a class="hover:text-xl transition-all" href={link.url}>{link.label}</a></li>
            { 
              index === links.length - 1 && 
              <ThemeToggle />
            }
          </>
        ))
      }
    </ul>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const logo = document.getElementById('logo');
    if (logo) {
      logo.addEventListener('click', () => {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    }
  });
</script>
