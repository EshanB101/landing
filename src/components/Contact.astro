<section id="contact" class="px-24 py-16">
  <h1 class="scrolling-section text-center text-[90px]">Contact Us</h1> 
  <form class="scrolling-section" data-netlify="true" method="POST" name="contact">
    <div class="flex flex-wrap">
      <div class="w-[50%] pr-12 mb-8">
        <label class="block mb-2 text-lg font-semibold" for="name">Name</label>
        <input placeholder="Enter name" type="text" id="name" name="name" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" required />
      </div>
      <div class="w-[50%] pl-12 mb-8">
        <label class="block mb-2 text-lg font-semibold" for="email">Email</label>
        <input  placeholder="Enter email" type="email" id="email" name="email" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" required />
      </div>
    </div>
    <div class="mb-8">
      <label class="block mb-2 text-lg font-semibold" for="message">Message</label>
      <textarea  placeholder="Enter message.." id="message" name="message" rows="5" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
    </div>
    <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition-colors">Get in Touch</button>
  </form>
</section>